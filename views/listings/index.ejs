<% layout('layout/boilerplate') -%>
<body>
  <style>
    #filters{
      display:flex;
      flex-wrap: wrap;
      align-items: center;
    }
    .filter{
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity: 0.7;
      
    }
    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }
    .tax-info{
      display: none;
    }
    .tax-Switch{
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.5rem;
      padding: 1rem;
      display: flex;
      align-items: center;
    }
  </style>
     <nav class="navbar navbar-expand-lg bg-transparent">

    <div id="filters">
      <div class="filter">
        <div>
          <i class="fa-solid fa-fire"></i>
          <p>Trending</p>
        </div>
      </div>

      <div class="filter">
        <div>
          <i class="fa-solid fa-umbrella-beach"></i>
          <p>Beach Fort</p>
        </div>
      </div>

      <div class="filter">
        <div>
          <i class="fa-solid fa-person-swimming"></i>
          <p>Pool</p>
        </div>
      </div>

      <div class="filter">
        <div>
          <i class="fa-solid fa-bed"></i>
          <p>Rooms</p>
        </div>
      </div>

      <div class="filter">
        <div>
          <i class="fa-solid fa-mountain"></i>
          <p>Mountain</p>
        </div>
      </div>

      <div class="filter">
        <div>
          <i class="fa-solid fa-chess-rook"></i>
          <p>Castles</p>
        </div>
      </div>

      <div class="filter">
        <div>
          <i class="fa-solid fa-campground"></i>
          <p>Camping</p>
        </div>
      </div>

      <div class="filter">
        <div>
          <i class="fa-solid fa-cow"></i>
          <p>Farm</p>
        </div>
      </div>

      <div class="filter">
        <div>
          <i class="fa-solid fa-snowflake"></i>
          <p>Arctic</p>
        </div>
      </div>

      <div class="filter">
        <div>
          <i class="fa-solid fa-bowling-ball"></i>
          <p>Play</p>
        </div>
      </div>
      <div class="tax-Switch">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault">Include Tax</label>
        </div>
      </div>
    </div>
    </body></nav>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% if (allListings.length === 0) { %>
        <p class="text-center mt-4">No listings found for your search.</p>
      <% }else{ %>
      
        <% for(let listing of allListings) {%>
            <a href="/listings/<%= listing._id %>"class="listing-link">
                
            <div class="card listing-card mt-3" >
                <img src="<%=listing.image.url%>" class="card-img-top" alt="listing" style="height: 20rem;">
                <div class="card-img-overlay"><%= listing.country %></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b><br>
                    &#8377;
                    <% if (listing.price) { %>
                      <%= listing.price.toLocaleString('en-IN') %> 
                    <% } else { %>
                      Price not available
                    <% } %> 
                    /night <i class="tax-info">&nbsp;&nbsp;&nbsp;+18% GST</i>
                  </p>
                  
                  
                </div>
              </div>
            </a>
              <% } }%>
    </div>
    <script>
      let toggleSwitch = document.getElementById("switchCheckDefault");
      let taxInfos = document.querySelectorAll(".tax-info");
    
      toggleSwitch.addEventListener("click", () => {
        taxInfos.forEach((info) => {
          info.style.display = (info.style.display !== "inline") ? "inline" : "none";
        });
      });
    </script>
    
</body>
